<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Preguntas</h1>
      <table class="table">
        <tr>
          <th>Id</th>
          <th>Título de la pregnta</th>
          <th>Descripción</th>
        </tr>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>